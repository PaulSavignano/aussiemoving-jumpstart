<div class="grid__item one-half medium-down--one-whole {% if settings.home-featured-video-text-1-align == 'right-video' %} push--large--one-half {% endif %}" style="padding: 0;">
  <div class="video-overlay">
    <iframe width="560" height="315" src="https://www.youtube.com/embed/2qt08BmihyI?wmode=opaque" frameborder="0" allowfullscreen></iframe>
  </div>
</div>
<div class="grid__item one-half medium-down--one-whole {% if settings.home-featured-video-text-1-align == 'left-video' %} push--large--one-half {% else %} pull--large--one-half {% endif %}">
  <div class="wrapper" style="padding-top: 8px;">
    <div class="large--display-table">
      <div class="large--display-table-cell">
        {% if settings.home-featured-video-text-1-title != blank or settings.home-featured-video-text-1-content != blank or settings.home-featured-video-text-1-btn-label != blank %}
        {% unless settings.home-featured-video-text-1-title == blank %}
          <h3>{{ settings.home-featured-video-text-1-title }}</h3>
        {% endunless %}
        {% unless settings.home-featured-video-text-1-content == blank %}
          <p>{{ settings.home-featured-video-text-1-content }}</p>
        {% endunless %}
        {% unless settings.home-featured-video-text-1-btn-label == blank %}
          <a class="btn btn--regular btn--outline btn--light" href="{{ settings.home-featured-video-text-1-btn-url }}">{{ settings.home-featured-video-text-1-btn-label }}</a>
        {% endunless %}
        {% else %}
          <!-- onboarding -->
          <h3>{{ 'homepage.onboarding.section_title' | t }}</h3>
          <p>{{ 'homepage.onboarding.section_text_html' | t }}</p>
        {% endif %}
      </div>
    </div>
  </div>
</div>



{% if settings.home-featured-video-text-2-title != blank or settings.home-featured-video-text-2-content != blank or settings.home-featured-video-text-2-btn-label != blank %}
	<div class="home-imagebox">
    <div class="grid__item one-half medium-down--one-whole image {% if settings.home-featured-video-text-2-align == 'right-video' %} push--large--one-half {% endif %}">
      <iframe width="723" height="397" src="https://www.youtube.com/embed/2qt08BmihyI" frameborder="0" allowfullscreen></iframe>
		</div>
		<div class="content wrapper">
			<div class="grid__item one-half medium-down--one-whole content {% if settings.home-featured-video-text-2-align == 'left-img' %} push--large--one-half {% else %} pull--no {% endif %}">
				<div class="large--display-table">
					<div class="large--display-table-cell">
						{% unless settings.home-featured-video-text-2-title == blank %}
						  <h3>{{ settings.home-featured-video-text-2-title }}</h3>
						{% endunless %}
						{% unless settings.home-featured-video-text-2-content == blank %}
						  <p>{{ settings.home-featured-video-text-2-content }}</p>
						{% endunless %}
						{% unless settings.home-featured-video-text-2-btn-label == blank %}
							<a class="btn btn--regular btn--outline btn--light" href="{{ settings.home-featured-video-text-2-btn-url }}">{{ settings.home-featured-video-text-2-btn-label }}</a>
						{% endunless %}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endif %}
